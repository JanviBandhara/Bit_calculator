<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bitcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BitCalculator">
        <activity
            android:name=".Shift_learning"
            android:exported="false" />
        <activity
            android:name=".Hexa_learning"
            android:exported="false" />
        <activity
            android:name=".Octal_learning"
            android:exported="false" />
        <activity
            android:name=".Binary_learning"
            android:exported="false" />
        <activity
            android:name=".Decimal_learning"
            android:exported="false" />
        <activity
            android:name=".String_learning"
            android:exported="false" />
        <activity
            android:name=".MainActivity2"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BitCalculator.NoActionBar" />
    </application>

</manifest>